<!-- editもnewもこれを呼び出す。つまりgoal editの初回設定と変更のやつ -->
<%= form_for(main_obj) do |f| %>
  <% if main_obj.errors.any? %>
    <div id="error_explanation">
      <h2 ><%= pluralize(main_obj.errors.count, "error") %> prohibited this main_obj from being saved:</h2>

      <ul>
      <% main_obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-xs-2 col-md-2 col-lg-2"></div>

<div class="col-xs-7 col-md-7 col-lg-7" style="background-color: #e6e6e6;">
  <div class="col-xs-12 col-md-12 col-lg-12">
    <div class="col-xs-12 col-md-12 col-lg-12">
      <div class="field " >
        <%= f.label :目標を決めましょう %>
        <%= f.text_field :title, :class => "col-xs-8 col-md-8 col-lg-8" %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-12 col-lg-12">
    <div class="col-xs-12 col-md-12 col-lg-12">
      <div class="field " >
        <%= f.label :具体的にすることを書いてください。 %>
        <%= f.text_area :text, :class => "col-xs-10 col-md-10 col-lg-10" %>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-12 col-lg-12">
    <div class="col-xs-12 col-md-12 col-lg-12">
      <div class="field">
        <%= f.label "期限を決めましょう。" %>
        <%= f.datetime_select :start %>〜
      </div>
      <div class="field">〜
        <%= f.datetime_select :limit %>
      </div>
    </div>
    <div class="col-xs-12 col-md-12 col-lg-12" style="margin-top: 20px; margin-right: auto; margin-left: auto;">
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
</div>

<% end %>
