<h1>ログイン</h1>

<%= form_for(:user_log, url: login_path) do |f| %>

    <div>
      <p><%= f.label :mail, 'メールアドレス' %></p>
      <p><%= f.text_field :mail %></p>
    </div>
    <div>
      <p><%= f.label :password, 'パスワード' %></p>
      <p><%= f.password_field :password %></p>
    </div>
  <%= f.submit 'ログインする' %>
  <p>New user? <%= link_to "Sign up now!", new_user_path %></p>

<% end %>